
<p id="notice"><%= notice %></p>

<div class="container">
<center><h1>Exams</h1></center>

<table class="table table-striped">
  <thead>
    <tr>
       <th>Title</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @exams.each do |exam| %>
      <tr>
      	<td><%= link_to "#{exam.try(:title)}", subjects_exam_path(exam.id) %></td>
        <td><%= link_to 'Show', exam %></td>
        <td><%= link_to 'Edit', edit_exam_path(exam) %></td>
        <td><%= link_to 'Destroy', exam, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
<%#= link_to 'New Exam', new_exam_path%>
<a href="/exams/new" class="btn btn-success" role="button">New Exam</a>
