<p id="notice"><%= notice %></p>
<div class="container">
<center><h1>Subjects</h1></center>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <!-- <th>Exam</th> -->
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <!-- <td><a href="/topics"><%#= subject.title %></a></td> -->
         <td><%= link_to "#{subject.try(:title)}", topics_subject_path(subject.id) %></td>
        <td><%#= subject.exam_id %></td>
        <td><%= link_to 'Show', subject %></td>
        <td><%= link_to 'Edit', edit_subject_path(subject) %></td>
        <td><%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
<%= link_to 'Back', root_path %>
<% if current_user.admin?%>
<%= link_to 'New Subject', new_subject_path %>
<%end%>
