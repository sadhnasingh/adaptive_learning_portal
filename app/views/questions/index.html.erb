<p id="notice"><%= notice %></p>
<div class="container">
<center><h1>Questions</h1></center>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.title %></td>
         <td><%#= link_to "#{question.try(:title)}", questions_chapter_path(question.id) %></td>
        <td><%= link_to 'Show', question %></td>
        <td><%= link_to 'Edit', edit_question_path(question) %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
   
</table>

<br>
</div>
<div class="col-md-12">
  <% if current_user.admin?%>
<%= link_to 'New Question', new_question_path, :class => "btn btn-lg btn-success btn"  %><br></div>
<%end%>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
<%#= link_to 'Easy Question', chapter_easy_question_path %>
<%# if @chapter.id.present?%>
<div class="row">
  <div class="col-md-4">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
<a href="/chapters/<%= @chapter.try(:id)%>/easy_question" class= "btn btn-lg btn-success btn">Easy Question</a><br><br></div>
<div class="col-md-4">
<a href="/chapters/<%= @chapter.try(:id)%>/medium_question" class= "btn btn-lg btn-success btn">Medium Question</a><br><br></div>
<div class="col-md-4">
<a href="/chapters/<%= @chapter.try(:id)%>/hard_question" class= "btn btn-lg btn-success btn">Hard Question</a></div>
</div><br><br><br><br>
<%#end%>
