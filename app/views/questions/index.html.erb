<p id="notice"><%= notice %></p>

<h1>Questions</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.title %></td>
         <td><%#= link_to "#{question.try(:title)}", questions_chapter_path(question.id) %></td>
        <td><%= link_to 'Show', question %></td>
        <td><%= link_to 'Edit', edit_question_path(question) %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
   
</table>

<br>

<%= link_to 'New Question', new_question_path %><br>
<%#= link_to 'Easy Question', chapter_easy_question_path %>
<%# if @chapter.id.present?%>
<a href="/chapters/<%= @chapter.try(:id)%>/easy_question">Easy Question</a><br>
<a href="/chapters/<%= @chapter.try(:id)%>/easy_question">Medium Question</a><br>
<a href="/chapters/<%= @chapter.try(:id)%>/easy_question">Hard Question</a>
<%#end%>
